<!-- Basis Meta-Tags -->
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<!-- Meta-Beschreibung (wichtiger SEO-Faktor) -->
<meta name="description" content="Fading Hills. Die Aternative Rock Band">

<!-- Keywords (nicht mehr so relevant, kann aber genutzt werden) -->
<meta name="keywords" content="Band, Rock, Alternative, Fading-Hills, FadingHills, Fading Hills">

<!-- Canonical Tag (verhindert Duplicate Content) -->
<link rel="canonical" href="https://www.fading-hills.de">


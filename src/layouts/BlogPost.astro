---
import type { CollectionEntry } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import Layout from './MainLayout.astro';
import { Link } from 'astro-link';
import { ArrowLeft } from "@lucide/astro";

type Props = CollectionEntry<'blog'>['data'];

const { title, pubDate, updatedDate, heroImage } = Astro.props;
---
<Layout title='Blog Post'>
	<main class="max-w-5xl mx-auto px-5 w-screen">
		<div class="w-full flex justify-center mt-12">
            <Link href="/blog" class="text-muted-foreground flex items-center gap-2 text-base hover:text-white hover:underline">
                <ArrowLeft size={20}/>
                Zur√ºck
            </Link>
        </div>

		<article class="pb-12 mt-8">
			<div class="hero-image">
				{heroImage && <img width={1020} height={510} src={heroImage} alt="" class="rounded-xl" />}
			</div>
			<div class="max-w-4xl mx-auto">
				<div class="mt-4">
					<div>
						<FormattedDate date={pubDate} />
						{
							updatedDate && (
								<div class="last-updated-on">
									Last updated on <FormattedDate date={updatedDate} />
								</div>
							)
						}
					</div>
					<h1>{title}</h1>
					<hr class="border-neutral-700 mb-2" />
				</div>
				<slot />
			</div>
		</article>
	</main>
</Layout>
